h1 {
    text-decoration: none;
    font-family: 'Arial';
    font-size: 48pt;
    color: rgb(235, 235, 235);
    position: relative;
    margin: 0px;
    border: 1px solid black;
    border-color:#000;
    background-color: #000000;
}

.userInput {
    text-decoration: none;
    font-family: 'Arial';
    font-size: 24pt;
    color: black;
    position: relative;
    bottom: 50px;
}

.connect4 {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 60vh;
  }
  
  .board {
    display: grid;
    grid-template-columns: repeat(7, 60px);
    grid-template-rows: repeat(6, 60px); /* Ensure the grid has 5 rows */
    grid-gap: 5px;
    border: 2px solid #000;
    background-color: #6495ed;
    padding: 5px;
  }
  
  .cell {
    width: 60px;
    height: 60px;
    border: 1px solid #000;
    border-radius: 50%;
    background-color: #fff;
    position: relative;
  }

  
  .token {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    margin: 5px;
  }
  
  .player1 {
    background-color: red;
  }
  
  .player2 {
    background-color: yellow;
  }