<script src="/index.js"></script>
<div class="menu-buttons">
    <button type="button" id="new-game-button">New Game</button>
    <button type="button" id="join-room-button">Join Game</button>
</div>
<div id="modal-backdrop" class="hidden"></div>
<div id="join-game-modal" class="hidden">
    <div class="modal-dialog">
        <div class="modal-header">
            <h3>Join Game</h3>
            <button type="button" id="modal-close" class="modal-hide-button">&times;</button>
        </div>
    
        <div class="modal-body">
            <div class="join-game-field">
                <label for="game-id">Enter Game ID</label>
                <input type="number" id="game-id"></input>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" id="modal-cancel" class="modal-hide-button action-button">Cancel</button>
            <button type="button" id="modal-accept" class="action-button">Join Game</button>
        </div>
    </div>
</div>